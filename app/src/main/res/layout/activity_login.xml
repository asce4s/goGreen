<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="168dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_weight="95"
            android:gravity="center_vertical|center|center_horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center|center_horizontal"
                android:src="@drawable/logogreen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#48e7e7e7"
            android:orientation="vertical"
            android:paddingBottom="10sp"
            android:paddingEnd="20sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:paddingStart="20sp"
            android:paddingTop="30sp"
            android:theme="@style/Base.CardView">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:drawableLeft="@drawable/ic_1674_200"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#fff"
                android:textColorHint="#ccc"
                 />

            <EditText
                android:id="@+id/et_pw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_20151104_5639736ce98c8_210x210"
                android:textColor="#fff"
                android:textColorHint="#ccc" />


            <Button
                android:id="@+id/btn_login_normal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:background="@color/colorPrimary"
                android:padding="15sp"
                android:text="Sign In"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gd"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:elevation="1dp"
                android:layout_marginTop="5sp"
                android:text="Forgot password"
                android:textAlignment="center"
                android:textColor="#fff"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="center_vertical|center|center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:transitionGroup="false">

            <in.championswimmer.libsocialbuttons.buttons.BtnFacebook
                android:id="@+id/btn_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Facebook"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="12sp"
                android:elevation="0dp" />

            <in.championswimmer.libsocialbuttons.buttons.BtnGoogleplus
                android:id="@+id/btn_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Google"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="12sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="38dp"
                android:layout_weight="0.5"

                android:paddingTop="10dp"
                android:text="New here ?"
                android:textAlignment="textEnd"
                android:layout_gravity="right|end"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:gravity="right|end" />
            <TextView
                android:id="@+id/tv_createaccount"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_weight="0.5"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:paddingTop="10dp"
                android:text=" Join with us"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textColor="#ccc"
                android:paddingBottom="5sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
