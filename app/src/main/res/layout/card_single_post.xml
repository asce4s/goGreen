<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="false"
        android:layout_marginBottom="15dp"
        card_view:cardElevation="2sp"
        android:padding="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Supun  Sasanka"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Location"
                android:id="@+id/tv_card_location"
                android:textSize="20dp"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp" />

            <ImageView
                android:id="@+id/iv_card_img"
                android:layout_width="fill_parent"
                android:layout_height="249dp"
                android:src="@drawable/profile"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:text="some description"
                android:id="@+id/tv_card_desc"
                android:padding="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#efeeee">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="Discuss"
                    android:id="@+id/tv_discuss"
                    android:layout_weight="50"
                    android:textAlignment="gravity"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal"
                    android:clickable="true"
                    android:layout_marginRight="5dp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Vote"
                    android:id="@+id/btn_card_like"
                    android:layout_weight="50"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>